<% @title = "My Settings" %>

<div class="page-header">
  <h2>Gravatar Icon</h2>
</div>

<%= image_tag current_user.avatar_url(80, 'identicon'), class: 'img-rounded' %>

You can change your avatar at <%= link_to 'gravatar.com', 'http://gravatar.com', target: '_blank' %>

<div class="page-header">
  <h2>Email Notifications</h2>
</div>

<%= hidden_field_tag 'isdirty', '1' %>

<%= form_tag update_settings_user_path(current_user), method: :post, id: 'email_settings' do %>
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <label class="checkbox <%= 'selected' if current_user.email_on?(:send_email) %>"><%= check_box_tag 'email[send_email]', '1', current_user.email_on?(:send_email) %> <%= 'Receive email' %></label>
    </div>
  </div>

  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <%= link_to "Save Settings", '#', class: 'btn btn-primary', data: { object: 'settings-save', target: "#email_settings" } %>
    </div>
  </div>
<% end %>
