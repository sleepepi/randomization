<% @title = 'Assignments' %>
<div class="page-header">
  <h1>
    <%= link_to "Projects", projects_path %> &middot; <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Randomize Subject", randomize_subject_project_path(@project), class: 'btn btn-xs btn-default' %>
  </h1>
</div>

<%= form_tag project_assignments_path(@project), method: :get, remote: true, id: "assignments_search", class: 'form-inline', data: { object: 'form-load', no_turbolink: true } do %>
  <%= hidden_field_tag :order %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary' %>
<% end %>

<div id="assignments"><div class="center"><%= image_tag "contour/ajax-loader.gif" %></div></div>
