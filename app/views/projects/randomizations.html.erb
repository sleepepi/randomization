<% @title = 'Randomizations' %>
<div class="page-header">
  <h1>
    <%= link_to "Projects", projects_path %> &middot; <%= link_to @project.name, @project %> &middot; <%= @title %>
    <%= link_to "Randomize Subject", randomize_subject_project_path(@project), class: 'btn btn-xs btn-default' %>
  </h1>
</div>

<%= form_tag randomizations_project_path(@project), method: :get, class: 'form-inline' do %>
  <%= hidden_field_tag :order, params[:order] %>
  <%= text_field_tag 'search', params[:search], class: 'form-control' %>
  <%= submit_tag 'Search', class: 'btn btn-primary', name: nil %>
  <%= link_to 'Reset', randomizations_project_path(@project), class: 'btn btn-default' %>
<% end %>

<%= render partial: 'projects/randomizations' %>
