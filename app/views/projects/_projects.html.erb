<%= render partial: 'contour/layouts/per_page', locals: { type: 'projects', per_page: 20, object_count: @projects.total_count } %>

<table class="table table-striped table-bordered" style="width:100%">
  <thead>
    <tr>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.name', 'Name', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.description', 'Description', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.user_id', 'User', 'projects_search') %></th>
      <th style="white-space:nowrap"><%== sort_field_helper(@order, 'projects.deleted', 'Deleted', 'projects_search') %></th>
      <th>Actions</th>
    </tr>
  </thead>

  <% @projects.each do |project| %>
    <tr>
      <td><%= project.name %></td>
      <td><%= project.description %></td>
      <td><%= link_to project.user.name, project.user if project.user %></td>
      <td><%= project.deleted %></td>
      <td>
        <%= link_to 'Edit', edit_project_path(project), class: 'btn btn-xs btn-default' %>
        <%= link_to 'Delete', project, method: :delete, class: 'btn btn-xs btn-danger-inverse', data: { confirm: "Are you sure you want to delete Project #{project.name}?" } %>
      </td>
    </tr>
  <% end %>
</table>

<div class="center"><%= paginate @projects, theme: 'contour' %></div>
